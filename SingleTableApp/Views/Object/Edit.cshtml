@model IList<SingleTableApp.Models.FieldViewModel>
<p>
    @using (Html.BeginForm())
    {
        <table>
            @for (int i = 0; i < Model.Count; ++i)
            {
                <tr>
                    <td>
                        @Html.HiddenFor(m => m[i].Id)
                        @Html.ValueForModel(Model[i].Name)
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m[i].Value, new {type = Model[i].Type.Value, step = "'any'"})
                    </td>
                </tr>
            }
        </table>
        <input type="submit" value="Сохранить изменения"/>
    }
</p>